{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "../dist/server",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "../utils/backend/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

